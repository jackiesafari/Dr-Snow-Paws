{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "mkdir -p utils && pip install -r requirements.txt && chmod +x start.sh"
    },
    "deploy": {
      "startCommand": "./start.sh",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }